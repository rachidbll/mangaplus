generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model Manga {
  id            String    @id @default(cuid())
  anilistId     Int?      @unique
  title         String
  description   String    @db.Text
  coverImage    String
  bannerImage   String
  genres        String
  status        String
  author        String
  artist        String
  totalChapters Int
  rating        Float
  apiMangaName  String
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt
  chapters      Chapter[]
  characters    Character[]
}

model Chapter {
  id            String   @id @default(cuid())
  title         String
  chapterNumber Int
  pages         Json
  mangaId       String
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt
  manga         Manga    @relation(fields: [mangaId], references: [id])

  @@index([mangaId], map: "Chapter_mangaId_fkey")
}

model Character {
  id          String  @id @default(cuid())
  name        String
  image       String
  description String  @db.Text
  mangaId     String
  manga       Manga   @relation(fields: [mangaId], references: [id])

  @@index([mangaId], map: "Character_mangaId_fkey")
}

model Setting {
  id        String   @id @default(cuid())
  key       String   @unique
  value     String   @db.Text
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}