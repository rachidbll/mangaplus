generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model Manga {
  id            String    @id @default(cuid())
  anilistId     Int?      @unique
  title         String
  description   String    @db.Text
  coverImage    String
  bannerImage   String
  genres        String
  status        String
  author        String
  artist        String
  totalChapters Int
  rating        Float
  apiMangaName  String
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt
  chapters      Chapter[]
}

model Chapter {
  id            String   @id @default(cuid())
  title         String
  chapterNumber Int
  pages         Json
  mangaId       String
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt
  manga         Manga    @relation(fields: [mangaId], references: [id])

  @@index([mangaId], map: "Chapter_mangaId_fkey")
}
